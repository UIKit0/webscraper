             <block id="linkContent" linkPage="true">
                <block id="linkContentBlock" xpath="//body">
                	<field id="datetime" xpath="(//td[@class='booktitle'])[2]/text()" regexp="발행일자 : (.+)" datetimeParseFormat="yyyy.MM.dd" datetimeFormat="yyyy.MM.dd"/>
